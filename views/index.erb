<!DOCTYPE html>
  <head>
    <link href='http://fonts.googleapis.com/css?family=Bangers|Cabin+Sketch|Codystar|Lato:100,400,900|Monoton|Press+Start+2P|Source+Code+Pro|VT323|Wallpoet' rel='stylesheet' type='text/css'>

    <style>

      body {
        background-color: <%= messages["background"] %>;
      }

      .container  {
        background-color: red;
      }

      #game_box  {
        border: 2px dotted white;
        color: white;
        font-family: Comic Sans MS, Courier, Arial, sans-serif;
        margin: 2em 2em 2em 2em;
        text-align: center;
      }

      #guesses_remaining {
        font-size: 1em;
      }

      #messages  {
        font-size: 2em;
      }

    </style>


    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Web Guesser</title>

    <!-- Bootstrap -->
    <!-- <link href="../css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="../css/web_guesser.css" rel="stylesheet" type="text/css">
    <link href="stylesheet.css" rel="stylesheet" type="text/css"> -->

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

  </head>

  <body>

    <div id="game_box">

      <p id="messages">
        <%= messages["message"] %>
      </p>

      <form>
        <input type='text' name='guess' />
        <input type='submit' value='Guess!' />
      </form>

      <p id="guesses_remaining">
        guesses remaining: <%= guesses %>
      </p>

      <!-- <p>
        (SECRET NUMBER: <%= secret_number %>)
      </p> -->

    </div>



    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>


  </body>

</html>
